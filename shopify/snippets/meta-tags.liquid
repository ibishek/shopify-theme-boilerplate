{% liquid
    assign page_title = page_title | default: shop.name
    assign page_url = canonical_url | default: request.origin
    assign page_type = 'website'
    assign page_desc = page_description | default: shop.description | default: shop.name

    if request.page_type == 'product'
        assign page_type = 'product'
    elsif request.page_type == 'article'
        assign page_type = 'article'
    elsif request.page_type == 'password'
        assign page_url = request.origin
    endif
%}

{% comment %} The Open Graph protocal {% endcomment %}
<meta property="og:site_name" content="{{ shop.name }}" />
<meta property="og:url" content="{{ page_url }}" />
<meta property="og:title" content="{{ page_title | escape }}" />
<meta property="og:type" content="{{ page_type }}" />
<meta property="og:description" content="{{ page_desc | escape }}" />
{% if page_image -%}
    <meta property="og:image" content="{{ page_image | image_url | prepend: 'http:' }}" />
    <meta property="og:image:secure_url" content="{{ page_image | image_url | prepend: 'https:' }}" />
    <meta property="og:image:width" content="{{ page_image.width }}" />
    <meta property="og:image:height" content="{{ page_image.height }}" />
{%- endif %}
{% if request.page_type == 'product' -%}
    <meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html }}" />
    <meta property="og:price:currency" content="{{ cart.currency.iso_code }}" />
{%- endif %}

{% comment %} Twitter Card {% endcomment %}
<meta content="summary_large_image" name="twitter:card" />
<meta name="twitter:title" content="{{ page_title | escape }}" />
<meta name="twitter:description" content="{{ page_desc | escape }}" />
{% if page_image -%}
    <meta name="twitter:image" content="{{ page_image | image_url | prepend: "https:" }}" />
    <meta name="twitter:image:alt" content="{{ page_image.alt }}" />
{%- endif %}
{% if settings.twitter_username != blank -%}
    <meta name="twitter:site" content="{{ settings.twitter_username }}" />
{%- endif %}

